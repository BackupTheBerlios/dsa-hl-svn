<GUILayout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="GUILayout.xsd">
    <Window Type="RastullahLook/FrameWindow" Name="LogWindow">
        <Property Name="MetricsMode" Value="Absolute"/>
        <Property Name="Position" Value="x:0.0 y:0.0"/>
        <Property Name="Width" Value="400"/>
        <Property Name="Height" Value="330"/>

            <Window Type="RastullahLook/TabControl" Name="LogWindow/TabPlane">
                <Property Name="MetricsMode" Value="Absolute"/>
                <Property Name="AbsolutePosition" Value="x:15 y:20"/>
                <Property Name="AbsoluteWidth" Value="370"/>
                <Property Name="AbsoluteHeight" Value="275"/>
             
                <Window Type="RastullahLook/MultiLineEditbox" Name="LogWindow/ErrorLog">
                    <Property Name="RelativePosition" Value="x:0.0 y:0.0"/>
                    <Property Name="RelativeWidth" Value="1.0"/>
                    <Property Name="RelativeHeight" Value="1.0"/>
                    <Property Name="Text" Value="Fehler"/>
                </Window>
                 
                <Window Type="RastullahLook/MultiLineEditbox" Name="LogWindow/RastullahLog">
                    <Property Name="RelativePosition" Value="x:0.0 y:0.0"/>
                    <Property Name="RelativeWidth" Value="1.0"/>
                    <Property Name="RelativeHeight" Value="1.0"/>
                    <Property Name="Text" Value="rastullah.log"/>
                </Window>
                 
                <Window Type="RastullahLook/MultiLineEditbox" Name="LogWindow/OgreLog">
                    <Property Name="RelativePosition" Value="x:0.0 y:0.0"/>
                    <Property Name="RelativeWidth" Value="1.0"/>
                    <Property Name="RelativeHeight" Value="1.0"/>
                    <Property Name="Text" Value="ogre.log"/>
                </Window>
	    </Window>

	    <Window Type="RastullahLook/Button" Name="LogWindow/UpdateButton">
		<Property Name="Text" Value="Update"/>
                <Property Name="AbsolutePosition" Value="x:300 y:120"/>
                <Property Name="AbsoluteWidth" Value="50"/>
                <Property Name="AbsoluteHeight" Value="20"/>
	    </Window>		

	    <Window Type="RastullahLook/Button" Name="LogWindow/CloseButton">
		<Property Name="Text" Value="Update"/>
                <Property Name="AbsolutePosition" Value="x:300 y:120"/>
                <Property Name="AbsoluteWidth" Value="50"/>
                <Property Name="AbsoluteHeight" Value="20"/>
	    </Window>		
        </Window>
</GUILayout>


