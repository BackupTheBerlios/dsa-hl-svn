<GUILayout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="GUILayout.xsd">
  	<Window Type="RastullahLook/FrameWindow" Name="SoundConfig">
		<Property Name="MetricsMode" Value="Absolute"/>
		<Property Name="Position" Value="x:0.0 y:0.0"/>
		<Property Name="Width" Value="600"/>
		<Property Name="Height" Value="450"/>
		<Property Name="SizingEnabled" Value="true"/>

		<Window Type="RastullahLook/Listbox" Name="SoundConfig/Table">
			<Property Name="RelativeXPosition" Value="0.05" />
			<Property Name="RelativeYPosition" Value="0.1" />
			<Property Name="RelativeWidth" Value="0.9" />
			<Property Name="RelativeHeight" Value="0.7" />
		</Window>

		<Window Type="RastullahLook/Button" Name="SoundConfig/OK">
			<Property Name="Text" Value="OK"/>
        	<Property Name="RelativeXPosition" Value="0.05"/>
        	<Property Name="RelativeYPosition" Value="0.85"/>
        	<Property Name="RelativeWidth" Value="0.1"/>
        	<Property Name="AbsoluteHeight" Value="35"/>
        	<Property Name="Font" Value="Vera Serif-14"/>
		</Window>

		<Window Type="RastullahLook/Button" Name="SoundConfig/Cancel">
			<Property Name="Text" Value="Cancel"/>
        	<Property Name="RelativeXPosition" Value="0.85"/>
        	<Property Name="RelativeYPosition" Value="0.85"/>
        	<Property Name="RelativeWidth" Value="0.1"/>
        	<Property Name="AbsoluteHeight" Value="35"/>
        	<Property Name="Font" Value="Vera Serif-14"/>
		</Window>

	</Window>
</GUILayout>


