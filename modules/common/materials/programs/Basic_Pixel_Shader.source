sampler2D baseMap;

struct PS_INPUT 
{
   float2 Texcoord : TEXCOORD0;
   float2 Texcoord1: TEXCOORD1;
   float2 Texcoord2: TEXCOORD2;
   float4 Color    : TEXCOORD3;
   
};

float4 ps_main( PS_INPUT Input ) : COLOR0
{
   return tex2D( baseMap, Input.Texcoord )* Input.Color;
   
}



