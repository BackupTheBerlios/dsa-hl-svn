material AmbientVertexColour
{
   technique
   {
      pass
      {
         ambient vertexcolour
         diffuse vertexcolour
      }
   }
}

material DefaultDebugPrimitiveMaterial
{
   technique
   {
      pass
      {
         depth_write off
         scene_blend alpha_blend

         lighting off

         texture_unit
         {
            colour_op_ex source1 src_manual src_current 1.0 0.5 1.0
            alpha_op_ex source1 src_manual src_current 0.6
         }
      }
   }
}

